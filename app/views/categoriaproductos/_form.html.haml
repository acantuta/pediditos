= form_for @categoriaproducto do |f|
  - if @categoriaproducto.errors.any?
    #error_explanation
      %h2= "#{pluralize(@categoriaproducto.errors.count, "error")} prohibited this categoriaproducto from being saved:"
      %ul
        - @categoriaproducto.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.hidden_field :entidad_id
  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .field
    = f.label 'Imagen principal'
    = f.file_field :avatar
  .actions
    = f.submit 'Guardar',{class: 'button'}
