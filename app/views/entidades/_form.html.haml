= form_for @entidad do |f|
  - if @entidad.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entidad.errors.count, "error")} prohibited this entidad from being saved:"
      %ul
        - @entidad.errors.full_messages.each do |msg|
          %li= msg
  .field
    =f.collection_select :categoriaentidad_id, Categoriaentidad.all,:id,:nombre
  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .field
    = f.label :tiempo_envio_aprox
    = f.text_field :tiempo_envio_aprox
  .field
    = f.label :costo_delivery
    = f.number_field :costo_delivery
  .field
    = f.label :pedido_minimo
    = f.number_field :pedido_minimo
  .field
    = f.label :telefono
    = f.number_field :telefono
  .field
    = f.label "Delivery habilitado"
    = f.check_box :delivery_habilitado
  .field
    = f.label "Visible en la web"
    = f.check_box :visible
  .field
    = f.label 'Imagen a mostrar'
    = f.file_field :avatar
  - if @usuario.es_admin?
    .field
      = f.label 'Usuario propietario'
      = f.collection_select :usuario_id, Usuario.all, :id,:nombre_completo, include_blank: true
  %button Grabar
