= form_for @categoriaentidad do |f|
  - if @categoriaentidad.errors.any?
    #error_explanation
      %h2= "#{pluralize(@categoriaentidad.errors.count, "error")} prohibited this categoriaentidad from being saved:"
      %ul
        - @categoriaentidad.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .actions
    = f.submit 'GUARDAR',{class: "button"}
